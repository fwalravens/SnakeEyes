@page "/"


<h1>Snake Eyes</h1>

<div>
    <Dice Pips="@_game.Eye1"></Dice>
    <Dice Pips="@_game.Eye2"></Dice>
</div>
<p>Score: @_game.Total</p>
<button @onclick="_game.Play" disabled="@_game.HasSnakeEyes">Play</button>
<h3>Highscores</h3>
<ul>
    @foreach (int score in _game.HighScores.OrderByDescending(x => x))
    {
        <li>@score</li>
    }
</ul>
<SnakeEyesAlert Game="@_game"></SnakeEyesAlert>
@code{

    private Game _game = new ();

}
